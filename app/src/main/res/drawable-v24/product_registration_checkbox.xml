<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Unchecked -->
    <item android:state_checked="false" android:drawable="@drawable/ic_baseline_check_24" android:top="1dp" android:right="1dp" android:bottom="1dp" android:left="1dp">
        <shape>
            <stroke android:color="@color/white" android:width="1dp" />
            <corners android:radius="50dp" />
            <solid android:color="#fff" />
        </shape>
    </item>
    <!-- Checked -->
    <item android:state_checked="true" >
        <layer-list>
            <!-- 배경 -->
            <item>
                <shape>
                    <corners android:radius="100dp"/>
                    <solid android:color="@color/white"/>
                </shape>
            </item>
            <!-- 이미지 영역 -->
            <item android:drawable="@drawable/ic_baseline_check_24" android:top="2dp" android:right="2dp" android:bottom="2dp" android:left="2dp" />
        </layer-list>
    </item>
</selector>