<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linear_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/home_recyclerview_itme_outline"
    android:layout_marginTop="10dp"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        tools:ignore="Orientation">

        <!--        id란 변수의 이름을 넣어준것과 같다-->
        <!--        android:background가 없으니 이미지의 형태가 변하지 않는다-->

        <ImageView
            android:id="@+id/my_dang_guen_buy_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="8dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/product_item_image"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/my_dang_guen_buy_subject"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="상품내용"
                    android:textColor="@color/white"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    tools:ignore="MissingConstraints" />

                <ImageButton
                    android:id="@+id/my_dang_guen_buy_menu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:layout_marginRight="16dp"
                    android:background="#232121"
                    android:gravity="right"
                    android:src="@drawable/ic_baseline_more_vert_24"
                    android:tint="@color/white"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:ignore="MissingConstraints" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/my_dang_guen_buy_time"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="2019-04-30 12:30"
                android:textColor="#969696"
                android:textSize="15dp"
                tools:ignore="MissingConstraints" />

            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/my_dang_guen_buy_certification"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="거래완료"
                    android:textColor="@color/white"
                    android:background="@drawable/drawable_gray_box_circle"
                    android:layout_marginBottom="30dp"
                    android:textSize="15dp"
                    tools:ignore="MissingConstraints" />

                <TextView
                    android:id="@+id/my_dang_guen_buy_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="가격"
                    android:textColor="@color/white"
                    android:textSize="23dp"
                    tools:ignore="MissingConstraints" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="원"
                    android:textColor="@color/white"
                    android:textSize="23dp"
                    tools:ignore="MissingConstraints" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
