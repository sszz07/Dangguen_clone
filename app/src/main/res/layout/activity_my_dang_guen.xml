<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/my_dang_guen_fragment"
    android:background="#232121">


    <TextView
        android:id="@+id/phone_number_textview"
        android:layout_width="349dp"
        android:layout_height="25dp"
        android:layout_marginTop="24dp"
        android:gravity="center"
        android:text="  나의 당근"
        android:textColor="@color/white"
        android:textSize="19dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:text="  ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━"
        android:textColor="#6e6e6e"
        android:textSize="9dp"
        app:layout_constraintTop_toBottomOf="@+id/phone_number_textview"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="16dp" />





    <ImageView
        android:id="@+id/my_dang_guen_image_view"
        android:layout_width="64dp"
        android:layout_height="67dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_baseline_person_pin_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView11"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/my_dang_guen_text_view_nick"
        android:layout_width="230dp"
        android:layout_height="40dp"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="32dp"
        android:gravity="left"
        android:text="닉네임"
        android:textColor="@color/white"
        android:textSize="25sp"
        app:layout_constraintStart_toEndOf="@+id/my_dang_guen_image_view"
        app:layout_constraintTop_toBottomOf="@+id/textView11"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/my_dang_guen_setting_button"
        android:layout_width="38dp"
        android:layout_height="46dp"
        android:layout_marginTop="28dp"
        android:background="#232121"
        android:gravity="center"
        android:text=">"
        android:textColor="@color/white"
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/my_dang_guen_text_view_nick"
        app:layout_constraintTop_toBottomOf="@+id/textView11"
        tools:ignore="MissingConstraints" />


    <Button
        android:id="@+id/my_dang_guen_like_button"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:background="#232121"
        android:gravity="center"
        android:text="관심 목록"
        android:textColor="@color/white"
        android:textSize="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/my_dang_guen_image_view"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/my_dang_guen_sell_button"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#232121"
        android:gravity="center"
        android:text="판매 내역"
        android:textColor="@color/white"
        android:layout_marginTop="20dp"
        android:textSize="30dp"
        app:layout_constraintTop_toBottomOf="@+id/my_dang_guen_like_button"
        tools:ignore="MissingConstraints" />


    <Button
        android:id="@+id/my_dang_guen_purchase_button"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#232121"
        android:gravity="center"
        android:text="구매 내역"
        android:textColor="@color/white"
        android:textSize="30dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/my_dang_guen_sell_button"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="16dp" />
</androidx.constraintlayout.widget.ConstraintLayout>