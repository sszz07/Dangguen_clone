<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/chatting_main_linear_layout"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:layout_marginTop="5dp"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:background="@drawable/home_recyclerview_itme_outline"
    >


    <ImageView
        android:id="@+id/my_dang_guen_complete_select_user_imageview"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="8dp"
        android:scaleType="centerCrop" />


    <TextView
        android:id="@+id/my_dang_guen_complete_select_user_nick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="닉네임"
        android:textColor="@color/white"
        android:layout_marginLeft="10dp"
        android:textSize="25dp"
        android:textStyle="bold"
        tools:ignore="MissingConstraints" />
</LinearLayout>