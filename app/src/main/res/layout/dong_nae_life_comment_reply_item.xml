<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linear_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    android:layout_marginLeft="40dp"
    android:background="@drawable/drawable_dark_box">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        tools:ignore="Orientation">

        <ImageView
            android:id="@+id/dong_nae_life_comment_reply_user_imageview"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="top"
            android:src="@drawable/ic_baseline_image_24"
            tools:ignore="MissingConstraints" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/dong_nae_life_comment_reply_nick"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="닉네임"
                    android:textColor="@color/white"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    tools:ignore="MissingConstraints" />


                <ImageButton
                    android:id="@+id/dong_nae_life_comment_reply_update_delete_button"
                    android:layout_width="50dp"
                    android:layout_height="40dp"
                    android:background="#232121"
                    android:layout_marginLeft="230dp"
                    android:src="@drawable/ic_baseline_more_vert_24"
                    android:tint="#c8c8c8" />
            </LinearLayout>

            <TextView
                android:id="@+id/dong_nae_life_comment_reply_time"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="8dp"
                android:text="12:10"
                android:textColor="#969696"
                android:textSize="15dp"
                tools:ignore="MissingConstraints" />


            <TextView
                android:id="@+id/dong_nae_life_comment_reply_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="가격"
                android:textColor="@color/white"
                android:textSize="18dp"
                tools:ignore="MissingConstraints" />


            <ImageView
                android:id="@+id/dong_nae_life_comment_reply_image"
                android:layout_width="150dp"
                android:layout_height="120dp"
                android:layout_marginLeft="10dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">

                    <Button
                        android:id="@+id/dong_nae_life_comment_reply_like"
                        android:layout_width="60dp"
                        android:layout_height="20dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/drawable_dark_box"
                        android:text="좋아요"
                        android:textColor="#c8c8c8"
                        android:textSize="12dp"
                        tools:ignore="MissingConstraints" />


                    <Button
                        android:id="@+id/dong_nae_life_comment_reply_like_orange"
                        android:layout_width="60dp"
                        android:layout_height="20dp"
                        android:background="@drawable/drawable_dark_box"
                        android:text="좋아요"
                        android:textColor="#DC9146"
                        android:textSize="12dp"
                        tools:ignore="MissingConstraints"
                        tools:layout_editor_absoluteX="0dp"
                        tools:layout_editor_absoluteY="0dp" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


</LinearLayout>

