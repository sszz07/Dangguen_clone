<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#232121"
    android:orientation="vertical">


    <ScrollView
        android:id="@+id/scrollView4"
        android:layout_width="match_parent"
        android:layout_height="800dp"
        android:background="#232121"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints,UselessLeaf"
        tools:layout_editor_absoluteX="-4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <ImageButton
                android:id="@+id/product_other_category_back_button"
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:background="#232121"
                android:src="@drawable/ic_baseline_arrow_back_ios_24"
                android:tint="@color/white"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="MissingConstraints" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/product_other_recyclerView"
                android:layout_width="412dp"
                android:layout_height="259dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="MissingConstraints" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <ImageView
                    android:id="@+id/product_other_select_seller_image"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:scaleType="fitCenter"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/product_other_recyclerView"
                    tools:ignore="MissingConstraints" />

                <TextView
                    android:id="@+id/product_other_select_seller_nick"
                    android:layout_width="wrap_content"
                    android:layout_height="46dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="10dp"
                    android:text="유저 닉네임"
                    android:textColor="@color/white"
                    android:textSize="20dp"
                    app:layout_constraintStart_toEndOf="@+id/product_other_select_seller_image"
                    app:layout_constraintTop_toBottomOf="@+id/product_other_recyclerView"
                    tools:ignore="MissingConstraints" />


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:text="  ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━"
                    android:textColor="#6e6e6e"
                    android:textSize="9dp"
                    tools:ignore="MissingConstraints"
                    tools:layout_editor_absoluteX="0dp" />

                <TextView
                    android:id="@+id/product_other_select_subject"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginLeft="8dp"
                    android:text="제목"
                    android:textColor="@color/white"
                    android:textSize="25dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView23"
                    tools:ignore="MissingConstraints" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/product_other_select_category"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginLeft="8dp"
                        android:text="카테고리"
                        android:textColor="#6e6e6e"
                        android:textSize="15dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/product_other_select_subject"
                        tools:ignore="MissingConstraints" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="•"
                        android:textColor="#969696"
                        android:textSize="15dp"
                        app:layout_constraintStart_toEndOf="@+id/asc_comment_button"
                        app:layout_constraintTop_toTopOf="@+id/dong_nae_life_main_comment_imageview" />

                    <TextView
                        android:id="@+id/product_other_select_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="시간"
                        android:textColor="#6e6e6e"
                        android:textSize="15dp"
                        app:layout_constraintStart_toEndOf="@+id/textView21"
                        app:layout_constraintTop_toBottomOf="@+id/product_other_select_subject"
                        tools:ignore="MissingConstraints" />


                </LinearLayout>
            </LinearLayout>


            <TextView
                android:id="@+id/product_other_select_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="20dp"
                android:text="내용"
                android:textColor="@color/white"
                android:textSize="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/product_other_select_category"
                tools:ignore="MissingConstraints" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/product_other_select_chatting"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp"
                    android:text="채 팅"
                    android:textColor="#6e6e6e"
                    android:textSize="15dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/product_other_select_content"
                    tools:ignore="MissingConstraints" />

                <TextView
                    android:id="@+id/product_other_select_chatting_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text=""
                    android:layout_marginLeft="5dp"
                    android:textColor="#6e6e6e"
                    android:textSize="15dp"
                    app:layout_constraintStart_toEndOf="@+id/product_other_select_like"
                    app:layout_constraintTop_toBottomOf="@+id/product_other_select_content"
                    tools:ignore="MissingConstraints"/>


                <TextView
                    android:id="@+id/product_other_select_point1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp"
                    android:text="•"
                    android:textColor="#969696"
                    android:textSize="15dp"
                    app:layout_constraintStart_toEndOf="@+id/asc_comment_button"
                    app:layout_constraintTop_toTopOf="@+id/dong_nae_life_main_comment_imageview" />


                <TextView
                    android:id="@+id/product_other_select_like"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="관심"
                    android:textColor="#6e6e6e"
                    android:textSize="15dp"
                    android:layout_marginLeft="5dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/product_other_select_content"
                    tools:ignore="MissingConstraints" />

                <TextView
                    android:id="@+id/product_other_select_like_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="5dp"
                    android:text=""
                    android:textColor="#6e6e6e"
                    android:textSize="15dp"
                    app:layout_constraintStart_toEndOf="@+id/product_other_select_like"
                    app:layout_constraintTop_toBottomOf="@+id/product_other_select_content"
                    tools:ignore="MissingConstraints" />


                <TextView
                    android:id="@+id/product_other_select_point2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp"
                    android:text="•"
                    android:textColor="#969696"
                    android:textSize="15dp"
                     />


                <TextView
                    android:id="@+id/product_other_select_hits_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="5dp"
                    android:text="조회"
                    android:textColor="#6e6e6e"
                    android:textSize="15dp"
                    />

                <TextView
                    android:id="@+id/product_other_select_hits_count_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="5dp"
                    android:text="조회수 카운트"
                    android:textColor="#6e6e6e"
                    android:textSize="15dp"
                    tools:ignore="MissingConstraints" />
            </LinearLayout>
        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:id="@+id/product_other_select"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="7dp">

            <ImageButton
                android:id="@+id/product_other_select_like_button_age"
                android:layout_width="33dp"
                android:layout_height="32dp"
                android:background="@drawable/setting_button"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_baseline_favorite_border_24"
                android:tint="@color/white"
                app:layout_constraintStart_toStartOf="parent"
                tools:ignore="MissingConstraints" />

            <ImageButton
                android:id="@+id/product_other_select_like_button_after"
                android:layout_width="33dp"
                android:layout_height="32dp"
                android:background="@drawable/setting_button"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_baseline_favorite_24"
                android:tint="#DC9146"
                app:layout_constraintStart_toStartOf="parent"
                tools:ignore="MissingConstraints" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="@android:color/transparent"
            android:text="|"
            android:textColor="#6e6e6e"
            android:textSize="30dp" />


        <TextView
            android:id="@+id/product_other_select_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:background="@android:color/transparent"
            android:text="가격"
            android:textColor="@color/white"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/product_my_select_원"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:text="원"
            android:textColor="@color/white"
            android:textSize="20dp"
            tools:ignore="InvalidId,MissingConstraints" />


        <Button
            android:id="@+id/product_other_select_chatting_button"
            android:layout_width="wrap_content"
            android:layout_height="46dp"
            android:layout_marginLeft="200dp"
            android:background="@drawable/drawable_orange_box"
            android:text="채팅"
            android:textColor="@color/white"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/scrollView4"
            tools:ignore="MissingConstraints" />
    </LinearLayout>

</androidx.appcompat.widget.LinearLayoutCompat>
