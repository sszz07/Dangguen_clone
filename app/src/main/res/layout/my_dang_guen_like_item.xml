<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linear_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:background="@drawable/home_recyclerview_itme_outline"
    tools:ignore="Orientation">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        tools:ignore="Orientation">

        <ImageView
            android:id="@+id/my_dang_guen_like_item_imageview"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="8dp"
            android:background="@drawable/product_item_image"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/my_dang_guen_like_item_product_subject"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="상품제목"
                android:textColor="@color/white"
                android:textSize="25dp"
                android:textStyle="bold"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/my_dang_guen_like_item_product_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2019-04-30 12:30"
                android:textColor="#969696"
                android:textSize="15dp"
                tools:ignore="MissingConstraints" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/my_dang_guen_like_item_product_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="가격"
                    android:textColor="@color/white"
                    android:textSize="23dp"
                    tools:ignore="MissingConstraints" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="원"
                    android:textColor="@color/white"
                    android:textSize="23dp"
                    tools:ignore="MissingConstraints" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70dp"
            android:orientation="vertical">


            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60dp">

                <ImageButton
                    android:id="@+id/my_dang_guen_like_item_product_like_age_image_button"
                    android:layout_width="33dp"
                    android:layout_height="32dp"
                    android:background="@drawable/setting_button"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_baseline_favorite_border_24"
                    android:tint="@color/white"
                    tools:ignore="MissingConstraints" />

                <ImageButton
                    android:id="@+id/my_dang_guen_like_item_product_like_after_image_button"
                    android:layout_width="33dp"
                    android:layout_height="32dp"
                    android:background="@drawable/setting_button"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_baseline_favorite_24"
                    android:tint="#DC9146"
                    tools:ignore="MissingConstraints" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/my_dang_guen_like_item_product_chatting_imageview"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/setting_button"
                    android:src="@drawable/ic_baseline_chat_bubble_outline_24"
                    android:tint="#969696"
                    tools:ignore="MissingConstraints" />

                <TextView
                    android:id="@+id/my_dang_guen_like_item_product_chatting_count"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="30dp"
                    android:text="123"
                    android:textColor="#969696"
                    android:textSize="18dp"
                    tools:ignore="MissingConstraints" />

                <ImageView
                    android:id="@+id/my_dang_guen_like_item_product_like_imageview"
                    android:layout_width="23dp"
                    android:layout_height="25dp"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/setting_button"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_baseline_favorite_border_24"
                    android:tint="#969696"
                    tools:ignore="MissingConstraints" />

                <TextView
                    android:id="@+id/my_dang_guen_like_item_product_like_count"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="30dp"
                    android:text="123"
                    android:textColor="#969696"
                    android:textSize="18dp"
                    tools:ignore="MissingConstraints" />
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>
</LinearLayout>





