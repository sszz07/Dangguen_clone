<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/make_user_dialog"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@drawable/user_identify_dilog_button"
    android:orientation="vertical"
    android:padding="16dp">




    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="삭제 하시겠습니까?"
        android:textColor="@color/white"
        android:textSize="20dp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/chatting_room_dialog_cancel_button"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:background="@drawable/drawable_dark_box"
            android:onClick="clickDialogBtn"
            android:text="취 소"
            android:textColor="@color/white"
            android:textSize="18dp" />

        <Button
            android:id="@+id/chatting_room_delete_button"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:onClick="clickDialogBtn"
            android:text="삭제하기"
            android:background="@drawable/drawable_orange_box"
            android:textColor="@color/white"
            android:textSize="18dp" />
    </LinearLayout>


</LinearLayout>