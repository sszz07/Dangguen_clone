<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="#232121"
android:orientation="vertical">

<!--    //       dp(Density-Independent Pixels),sp 차이점-->
<!--    //       dp-레이아웃을 정의를 할때 치수나 위치!!!를 정하기 위한 단위이다-->
<!--    //       화면의 크기가 달라지더라도 상관없이 동일한 크기가 된다-->

<!--    //       sp-ui레이아웃 정의 할때 텍스트의 크기!!! 지정하기 위한것-->
<!--    //       예를 들어 시스템 설정에서 텍스트 크기를 최대한 크게로 설정하면 ui의 레이아웃은 최대로 크게 된다-->

<!--    //       결론-일관성있게 똑같은 텍스트 크기를 원하면 dp 아니면 sp로 지정하면 된다다-->

<!--    //       transparent-투명한-->


<Button
    android:id="@+id/dong_nae_life_comment_update_button"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginBottom="5dp"
    android:background="@drawable/drawable_dialog_button"
    android:text="완료"
    android:textColor="@color/white"
    android:textSize="20dp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintVertical_bias="0.0"
    tools:ignore="MissingConstraints" />


<TextView
    android:id="@+id/dong_nae_life_update_subject"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:background="@android:color/transparent"
    android:text="수   정"
    android:textColor="@color/white"
    android:textSize="20dp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    tools:ignore="InvalidId,MissingConstraints" />


    <ImageView
        android:id="@+id/dong_nae_life_commet_update_image_imageview"
        android:layout_width="80dp"
        android:layout_height="90dp"
        android:src="@drawable/ic_baseline_image_24"
        app:layout_constraintTop_toBottomOf="@+id/textView1"
        tools:ignore="MissingConstraints,NotSibling"
        tools:layout_editor_absoluteX="16dp" />

<!--    <ImageButton-->
<!--        android:id="@+id/dong_nae_life_my_coment_cancle_imagebutton"-->
<!--        android:layout_width="25dp"-->
<!--        android:layout_height="25dp"-->
<!--        android:layout_marginBottom="75dp"-->
<!--        android:src="@drawable/ic_baseline_cancel_24"-->
<!--        android:tint="@color/white"-->
<!--        app:layout_constraintBottom_toBottomOf="@+id/dong_nae_life_commet_update_image_imageview"-->
<!--        app:layout_constraintEnd_toEndOf="@+id/dong_nae_life_commet_update_image_imageview"-->
<!--        tools:ignore="MissingConstraints" />-->


<TextView
    android:id="@+id/textView1"
    android:layout_width="match_parent"
    android:layout_height="20dp"
    android:layout_marginTop="8dp"
    android:text="  ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━"
    android:textSize="9dp"
    android:textColor="#6e6e6e"
    app:layout_constraintTop_toBottomOf="@+id/dong_nae_life_update_subject"
    tools:ignore="MissingConstraints"
    tools:layout_editor_absoluteX="0dp" />

    <EditText
        android:id="@+id/dong_nae_life_update_comment_content_edittext"
        android:layout_width="410dp"
        android:layout_height="200dp"
        android:layout_marginTop="8dp"
        android:autofillHints=" "
        android:background="@drawable/drawable_white_line"
        android:gravity="top"
        android:hint="우리 동네 관련된 질문이나 이야기를 해보세요"
        android:paddingTop="20dp"
        android:textColor="@color/white"
        android:textColorHint="#8c8c8c"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dong_nae_life_commet_update_image_imageview"
        tools:ignore="MissingConstraints" />

    <ImageButton
        android:id="@+id/dong_nae_life_comment_update_imagebutton"
        android:layout_width="49dp"
        android:layout_height="45dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/drawable_dark_box"
        android:src="@drawable/ic_baseline_image_24"
        android:tint="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dong_nae_life_update_comment_content_edittext"
        tools:ignore="MissingConstraints" />


</androidx.constraintlayout.widget.ConstraintLayout>







