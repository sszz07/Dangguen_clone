<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linear_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:gravity="center_vertical"
    android:background="@drawable/home_recyclerview_itme_outline"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        tools:ignore="Orientation">

        <!--        id란 변수의 이름을 넣어준것과 같다-->
<!--        android:background가 없으니 이미지의 형태가 변하지 않는다-->

        <ImageView
            android:background="@drawable/product_item_image"
            android:scaleType="centerCrop"
            android:id="@+id/main_image"
            android:layout_marginLeft="8dp"
            android:layout_width="100dp"
            android:layout_height="100dp" />

        <LinearLayout
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/home_subject_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="상품내용"
                    android:textColor="@color/white"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    tools:ignore="MissingConstraints" />


            </LinearLayout>

            <TextView
                android:id="@+id/home_time_textview"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="2019-04-30 12:30"
                android:textColor="#969696"
                android:textSize="15dp"
                tools:ignore="MissingConstraints" />

            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/home_reservation_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="예약중"
                    android:textColor="@color/white"
                    android:background="@drawable/drawable_green_circle"
                    android:layout_marginBottom="20dp"
                    android:textSize="15dp"
                    tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/home_price_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="가격"
                android:layout_marginLeft="5dp"
                android:textColor="@color/white"
                android:textSize="23dp"
                tools:ignore="MissingConstraints" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="원"
                    android:textColor="@color/white"
                    android:textSize="23dp"
                    tools:ignore="MissingConstraints" />
            </LinearLayout>
        </LinearLayout>

        <ImageButton
            android:id="@+id/home_adapter_chatting_image_button"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginTop="38dp"
            android:background="@drawable/setting_button"
            android:src="@drawable/ic_baseline_chat_bubble_outline_24"
            android:tint="#969696"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/home_adapter_chatting_count"
            android:text="123"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginTop="38dp"
            android:textSize="18dp"
            android:layout_marginLeft="5dp"
            android:textColor="#969696"
            tools:ignore="MissingConstraints"/>

        <ImageButton
            android:id="@+id/home_adapter_like_image_button"
            android:layout_width="23dp"
            android:layout_height="25dp"
            android:layout_marginTop="38dp"
            android:background="@drawable/setting_button"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_baseline_favorite_border_24"
            android:tint="#969696"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/home_adapter_like_count"
            android:layout_width="25dp"
            android:text="123"
            android:textSize="18dp"
            android:layout_marginLeft="5dp"
            android:layout_height="25dp"
            android:layout_marginTop="38dp"
            android:textColor="#969696"
            tools:ignore="MissingConstraints"/>


    </LinearLayout>
</LinearLayout>