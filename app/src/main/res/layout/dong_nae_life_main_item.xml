<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linear_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:background="@drawable/drawable_dark_box"
    android:orientation="vertical">


    <TextView
        android:id="@+id/dong_nae_life_main_subject"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="8dp"
        android:background="#464646"
        android:text="주제"
        android:textColor="@color/white"
        android:textSize="13dp"
        android:textStyle="bold"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/dong_nae_life_main_category_toghther"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="8dp"
        android:background="#464646"
        android:text="주제투게더"
        android:textColor="@color/white"
        android:textSize="13dp"
        android:textStyle="bold"
        tools:ignore="MissingConstraints" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <TextView
        android:id="@+id/dong_nae_life_main_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:text="내용"
        android:textColor="@color/white"
        android:textSize="23dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/dong_nae_life_main_모집중"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="모집중"
        android:textColor="#DC9146"
        android:textSize="23dp"
        tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/dong_nae_life_main_together_subject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:text="투게더제목"
            android:textColor="@color/white"
            android:textSize="23dp"
            tools:ignore="MissingConstraints" />
    </LinearLayout>


    <ImageView
        android:id="@+id/dong_nae_life_main_imageview"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@drawable/ic_baseline_person_pin_24" />

    <TextView
        android:id="@+id/dong_nae_life_main_together_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:text="투게더내용"
        android:textColor="#828282"
        android:textSize="16dp"
        tools:ignore="DuplicateIds,MissingConstraints" />

    <TextView
        android:id="@+id/dong_nae_life_main_together_age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:text="투게더나이"
        android:textColor="@color/white"
        android:textSize="16dp"
        tools:ignore="DuplicateIds,MissingConstraints" />


    <TextView
        android:id="@+id/dong_nae_life_main_together_clock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:text="투게더시간"
        android:textColor="@color/white"
        android:textSize="16dp"
        tools:ignore="DuplicateIds,MissingConstraints" />

    <TextView
        android:id="@+id/dong_nae_life_main_together_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:text="투게더날짜"
        android:textColor="@color/white"
        android:textSize="16dp"
        tools:ignore="DuplicateIds,MissingConstraints" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <TextView
        android:id="@+id/dong_nae_life_main_together_person"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:text="투게더사람"
        android:textColor="@color/white"
        android:textSize="16dp"
        tools:ignore="DuplicateIds,MissingConstraints" />

        <TextView
            android:id="@+id/dong_nae_life_main_together_personmyeong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="명"
            android:textColor="@color/white"
            android:textSize="16dp"
            tools:ignore="DuplicateIds,MissingConstraints" />
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/dong_nae_life_main_nick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:text="닉네임"
            android:textColor="#828282"
            android:textSize="13dp"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/dong_nae_life_main_together_nick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:text="투게더닉네임"
            android:textColor="#828282"
            android:textSize="13dp"
            tools:ignore="MissingConstraints" />


        <!--  layout_weight 레이아웃을 무게단위로 측정을 하게 된다-->
        <!--        https://yoo-hyeok.tistory.com/m/56   설명하는 블로그-->
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />


        <TextView
            android:id="@+id/dong_nae_life_main_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:text="시간"
            android:textColor="#828282"
            android:textSize="13dp"
            tools:ignore="MissingConstraints" />


    </LinearLayout>

</LinearLayout>