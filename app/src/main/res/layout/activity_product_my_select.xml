<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#232121"
    android:orientation="vertical">


    <ScrollView
        android:id="@+id/scrollView4"
        android:layout_width="match_parent"
        android:layout_height="511dp"
        android:background="#232121"
        tools:ignore="MissingConstraints,UselessLeaf"
        tools:layout_editor_absoluteX="-4dp"
        tools:layout_editor_absoluteY="-1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageButton
                    android:id="@+id/product_my_category_back_button"
                    android:layout_width="50dp"
                    android:layout_height="40dp"
                    android:background="#232121"
                    android:src="@drawable/ic_baseline_arrow_back_ios_24"
                    android:tint="@color/white"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:ignore="MissingConstraints" />

                <ImageButton
                    android:id="@+id/product_my_update_delete_button"
                    android:layout_width="50dp"
                    android:layout_height="40dp"
                    android:background="#232121"
                    android:layout_marginLeft="310dp"
                    android:src="@drawable/ic_baseline_more_vert_24"
                    android:tint="@color/white"

                    />


            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/product_my_recyclerView"
                android:layout_width="412dp"
                android:layout_height="259dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="MissingConstraints" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:text="  ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━"
                    android:textColor="#6e6e6e"
                    android:textSize="9dp"
                    tools:ignore="MissingConstraints"
                    tools:layout_editor_absoluteX="0dp" />

                <TextView
                    android:id="@+id/product_my_select_subject"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginLeft="8dp"
                    android:text="제목"
                    android:textColor="@color/white"
                    android:textSize="20dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView23"
                    tools:ignore="MissingConstraints" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/product_my_select_category"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginLeft="8dp"
                        android:text="카테고리"
                        android:textColor="#6e6e6e"
                        android:textSize="15dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/product_my_select_subject"
                        tools:ignore="MissingConstraints" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginLeft="8dp"
                        android:text="/"
                        android:textColor="#6e6e6e"
                        android:textSize="15dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/product_my_select_subject"
                        tools:ignore="MissingConstraints" />

                    <TextView
                        android:id="@+id/product_my_select_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginLeft="8dp"
                        android:text="시간"
                        android:textColor="#6e6e6e"
                        android:textSize="15dp"
                        app:layout_constraintStart_toEndOf="@+id/textView21"
                        app:layout_constraintTop_toBottomOf="@+id/product_my_select_subject"
                        tools:ignore="MissingConstraints" />


                </LinearLayout>
            </LinearLayout>


            <TextView
                android:id="@+id/product_my_select_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:text="내용"
                android:textColor="@color/white"
                android:textSize="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/product_my_select_category"
                tools:ignore="MissingConstraints" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/product_my_select_like"
                    android:layout_width="wrap_content"
                    android:layout_height="46dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="12dp"
                    android:text="관심"
                    android:textColor="#6e6e6e"
                    android:textSize="15dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/product_my_select_content"
                    tools:ignore="MissingConstraints" />

                <TextView
                    android:id="@+id/product_my_select_like_count"
                    android:layout_width="30dp"
                    android:layout_height="46dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginLeft="5dp"
                    android:text="관심 카운트"
                    android:textColor="#6e6e6e"
                    android:textSize="15dp"
                    app:layout_constraintStart_toEndOf="@+id/product_my_select_like"
                    app:layout_constraintTop_toBottomOf="@+id/product_my_select_content"
                    tools:ignore="MissingConstraints" />

                <TextView
                    android:id="@+id/product_my_select_like_count_slide"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="13dp"
                    android:text="/"
                    android:textColor="#6e6e6e"
                    android:textSize="15dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/product_my_select_subject"
                    tools:ignore="MissingConstraints" />

                <TextView
                    android:id="@+id/product_my_select_click"
                    android:layout_width="wrap_content"
                    android:layout_height="46dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="12dp"
                    android:text="조회"
                    android:textColor="#6e6e6e"
                    android:textSize="15dp"
                    app:layout_constraintStart_toEndOf="@+id/textView22"
                    app:layout_constraintTop_toBottomOf="@+id/product_my_select_content" />

                <TextView
                    android:id="@+id/product_my_select_click_counter"
                    android:layout_width="wrap_content"
                    android:layout_height="46dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="12dp"
                    android:text="조회수 카운트"
                    android:textColor="#6e6e6e"
                    android:textSize="15dp"
                    app:layout_constraintStart_toEndOf="@+id/product_my_select_click"
                    app:layout_constraintTop_toBottomOf="@+id/product_my_select_content"
                    tools:ignore="MissingConstraints" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="500dp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/scrollView4"
        tools:ignore="MissingConstraints">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#232121"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView1"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:text="  ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━"
                android:textColor="#6e6e6e"
                android:textSize="9dp"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="0dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#232121"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/product_my_select_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:layout_marginLeft="8dp"
                android:text="가격"
                android:textColor="@color/white"
                android:textSize="20dp"
                tools:ignore="InvalidId,MissingConstraints" />

            <TextView
                android:id="@+id/product_my_select_원"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:text="원"
                android:textColor="@color/white"
                android:textSize="20dp"
                tools:ignore="InvalidId,MissingConstraints" />
        </LinearLayout>


    </LinearLayout>







</androidx.appcompat.widget.LinearLayoutCompat>
